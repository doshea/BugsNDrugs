= cache do
  %div.magellan{"data-magellan-expedition" => "fixed"}
    %dl.sub-nav
      %dd{"data-magellan-arrival" => "bacteria"}
        %a{href: "#bacteria"} Bacteria
      %dd{"data-magellan-arrival" => "viruses"}
        %a{href: "#viruses"} Viruses
      %dd{"data-magellan-arrival" => "fungi"}
        %a{href: "#fungi"} Fungi
      %dd{"data-magellan-arrival" => "parasites"}
        %a{href: "#parasites"} Parasites

  - bacteria, viruses, fungi, parasites = BugClass.top_tier
  %a{name: 'bacteria', 'data-magellan-destination' => 'bacteria'}
  %ul.public.bug-list
    %li.tier-0{id: bacteria.name.downcase}
      %h2.centered
        -# Icon is 'Bacteria' by hunotika from The Noun Project
        = image_tag asset_path('icons/bacteria.svg'), class: 'bug-icon'
        = bacteria.name
      %hr.mini
        .small-4.columns
          %ul.firster
            = render partial: 'partials/li', locals: {bc: bacteria.subclasses[0], bug_or_drug: true}
          %ul.firster
            = render partial: 'partials/li', locals: {bc: bacteria.subclasses[2], bug_or_drug: true}
        .small-8.columns
          = render partial: 'partials/multicolumn', locals: {bc: bacteria.subclasses[1], bug_or_drug: true, splits: [(0..4), (5..8)]}
    %hr

  %a{name: 'viruses', 'data-magellan-destination' => 'viruses'}
  %ul.public.bug-list
    %li.tier-0{id: viruses.name.downcase}
      %h2.centered
