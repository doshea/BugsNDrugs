        .small-4.columns
          %ul.firster
            = render partial: 'partials/li', locals: {bc: viruses.subclasses[3], bug_or_drug: true}
        .small-4.columns
          %ul.firster
            = render partial: 'partials/li', locals: {bc: viruses.subclasses[4], bug_or_drug: true}
          %ul.firster
            = render partial: 'partials/li', locals: {bc: viruses.subclasses[5], bug_or_drug: true}
          %ul.firster
            = render partial: 'partials/li', locals: {bc: viruses.subclasses[6], bug_or_drug: true}
    %hr
  %a{name: 'fungi', 'data-magellan-destination' => 'fungi'}
