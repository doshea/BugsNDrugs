= content_tag_for(:tr, bc) do
  %td
    = link_to bc do
      %i.fi-link
  %td= bc.name
  %td= bc.order
  %td= bc.tier
  %td= bc.bug_class ? (link_to bc.bug_class.name, bc.bug_class) : 'N/A'
  %td
    = link_to edit_admin_bug_class_path(bc) do
      %i.fi-pencil
  %td
    = link_to admin_bug_class_path(bc), method: :delete, remote: true, data: {confirm: "Are you SURE you want to delete #{bc.name}?"} do
      %i.fi-trash